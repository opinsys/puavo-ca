#!/bin/sh

organisation=$1

set -eu

help () {
    echo "
    usage: $(basename $0) <organisation>

    Generate Puavo-CA certificates for given organisation
    "
    exit 2
}

[ "$organisation" = "--help" -o "$organisation" = "-h" ] && help
[ -z "$organisation" ] && help

echo $organisation >> /etc/puavo-ca/organisations/LIST
cd /etc/puavo-ca/organisations
make
